---
const {title, variant} = Astro.props;
import Button from "../components/Button.astro"
---
<nav>
<div class="logo-wrap">
    <h1 class="logo-text">HØJSKOLENDK</h1>
</div>
<div class="links">
<a href="/">Rejsekalender</a>
<a href="/">Højskoleophold</a>
<a href="/">Sommerhøjskole</a>
<a href="/">Priser</a>
<a href="/">Om os</a>
<a href="/">Kontakt os</a>
</div>
<div class="btn-wrap">
    <Button title="Bestil ophold" variant="primary" />
</div>
</nav>

<style>
    
    nav{
        background-color: white;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 20px 50px;
        align-items: center;
    }

    .logo-text{
        margin: 0;
        font-size: 20px;
        transform: rotate(-2deg);
    }
    .links a{
        color: black;
        text-decoration: none;
        font-weight: bold;
        padding-left: 20px;
    }

    .links a:hover{
        text-decoration: underline;
    }
    
</style>