<style>
  footer {
    background-color: #CE5501;
    color: white;
    padding: 10rem 8rem;
    font-family: 'Poppins', sans-serif;
    display: flex; /* to kolonner */
    justify-content: space-between;
    flex-wrap: wrap; 
    gap: 4rem; 
  }

  /* Venstre side */
  .footer-left {
    max-width: 600px;
    flex: 1; 
  }

  .footer-left h2 {
    font-family: 'Dela Gothic One', sans-serif;
    font-size: 2rem;
    margin: 0 0 1rem 0;
  }

  .footer-left h3 {
    font-weight: bold;
    font-size: 1rem;
    margin: 0 0 1rem 0;
  }

  .footer-left p {
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
  }

  .footer-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    margin-bottom: 2rem;
  }

  .footer-button {
    background-color: #000022;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: bold;
    font-size: 0.9rem;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  .footer-button:hover {
    background-color: #111144;
  }

  .footer-hours {
    display: block;
    margin-top: 2rem;
    font-size: 0.9rem;
  }

  /* Højre side FAQ */
  .footer-right {
    max-width: 450px;
    flex: 1; 
  }

   .footer-right h3 {
    font-family: 'Dela Gothic One', sans-serif;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: normal; 
  }

  .faq-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .faq-list li {
    font-weight: bold;
    border-bottom: 1px dotted white;
    padding: 0.75rem 0;
  }

  .faq-list li svg {
    width: 16px;
    height: 16px;
  }
</style>

