---
const {title, variant} = Astro.props;
---
<!-- husk at importer denne komponent til layout ligesom CSS -->

<button class={variant}>{title}</button>

<style>
    button {
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
         font-family: "Poppins", sans-serif;
  font-weight: 700;
  font-style: normal;
  font-size: 16px;
    }

    .primary {
        background-color: #CE5501;
        color: white;
    }

    .secondary {
        background-color: white;
        color: black;
    }
</style>