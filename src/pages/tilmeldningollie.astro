---
import Layouts from "../layouts/Layouts.astro";
import Button from "../components/Button.astro";
import Form from "../components/Form.astro";
import Cards from "../components/Cards.astro";
import "../css/card.css";
---

<Layouts>
  <section id="form_section">
    <Form headline="Tilmeld dig et infomøde her" bgimage="img/sunset.jpg" />

    <section class="cardsgrid2">
      <div class="card_picture">
        <Cards cardstitle="Se vores rejser her" />
      </div>

      <div class="card_list">
        <Cards
          badge1="ONLINE INFOMØDE"
          headline2="Kom til infomøde"
          badge2="Kig forbi et af vores hyggelige online-infomøder – vi glæder os til at
      møde dig!"
        />
      </div>
    </section>

    <section class="cardsgrid2">
      <div class="card_list">
        <Cards
          badge1="Godt at vide"
          headline2="Fem typiske bekymringer"
          badge2="og hvordan vores elever har håndteret dem"
        />
      </div>
      <div class="card_picture"><Cards cardstitle="Fællesskabsbillede" /></div>
    </section>
  </section>

